<h1>KakeStyle Garments </h1>
<ul>
  <% @garments.each do |garment| %>
  <li>
   <%= link_to garment.name.capitalize, garment_path(garment) %>
   <%= image_tag garment.image.url(:small) %>
   <%= link_to 'Edit', edit_garment_path(garment) %>
   <%= link_to 'Delete', garment_path(garment), method: :delete, data: {confirm: 'Are you sure?'} %>
  </li>
  <% end %>
</ul>

<%= link_to 'Add a new garment', new_garment_path %>
